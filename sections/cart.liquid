{% comment %}
  This section is used in the cart template to render /cart page with an
  overview of the items in customer's cart.
{% endcomment %}

<div class="collection__container">
  <div class="collection__container--content flex flex-col py-15 md:py-20 gap-8 md:gap-12 px-4 md:px-15">
    <h1 class="h1">{{ 'cart.title' | t }}</h1>

    <form action="{{ routes.cart_url }}" method="post">
      <table class="">
        {% for item in cart.items %}
          <tr class="grid grid-flow-rows md:grid-cols-3 place-items-start py-2">
            <td class="w-2xs h-auto">
              <div class="w-26">
                {% render 'image', image: item.image, url: item.url %}
              </div>
            </td>
            <td>
              <p class="body">{{ item.product.title }}</p>
              <p class="subtitle">{{ item.product.price | money }}</p>
              <p class="subtitle">Quantity: {{ item.quantity }}</p>
              {%- if item.product.has_only_default_variant == false -%}
                {%- for option in item.options_with_values -%}
                  <div class="product-option flex">
                    <p class="subtitle">
                      {{ option.name }}: <span>{{ option.value }}</span>
                    </p>
                  </div>
                {%- endfor -%}
              {%- endif -%}
            </td>
            <td>
              {{ 'cart.remove' | t | link_to: item.url_to_remove }}
            </td>
          </tr>
        {% endfor %}
      </table>
      <input type="submit" name="checkout" value="{{ 'cart.checkout' | t }}">
    </form>
  </div>
</div>

{% schema %}
{
  "name": "t:general.cart",
  "settings": []
}
{% endschema %}
