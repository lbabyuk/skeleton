<footer class="footer full-width">
  <div class="footer__container flex flex-col gap-12 pt-15 pb-6 px-4 md:pt-15 md:px-15">
    <div class="footer__links hidden md:flex justify-between">
      {% render 'footer-links', layout: 'desktop' %}
    </div>

    <div class="footer__links md:hidden flex flex-col justify-between">
      {% render 'footer-links', layout: 'mobile' %}
    </div>

    <div class="footer__info">
      <ul class="footer__list flex flex-col md:flex-row gap-3 md:gap-8 text-sm">
        <li>
          <a class="footer__list--text" href="#"
            >&copy; {{ 'now' | date: '%Y' }}
            {{ 'footer.company_name' | t | escape }}
          </a>
        </li>
        <li>
          <a class="footer__list--link" href="#" aria-label="Terms of Use">{{ 'footer.term_of_use' | t | escape }}</a>
        </li>
        <li>
          <a class="footer__list--link" href="#" aria-label="{{'footer.privacy_cookie_policy' | t }}">
            {{- 'footer.privacy_cookie_policy' | t -}}
          </a>
        </li>
      </ul>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "t:general.footer",
  "blocks": [
    {
      "type": "link_list",
      "name": "t:footer.blocks.link_list.name",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "default": "t:footer.blocks.link_list.settings.heading.default",
          "label": "t:footer.blocks.link_list.settings.heading.label"
        },
        {
          "type": "link_list",
          "id": "menu",
          "default": "footer",
          "label": "t:footer.blocks.link_list.settings.menu.label"
        }
      ]
    },
    {
      "type": "text",
      "name": "t:footer.blocks.text.name",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "default": "t:footer.blocks.text.settings.heading.default",
          "label": "t:footer.blocks.text.settings.heading.label"
        },
        {
          "type": "richtext",
          "id": "subtext",
          "default": "t:footer.blocks.text.settings.subtext.default",
          "label": "t:footer.blocks.text.settings.subtext.label"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "t:labels.menu"
        },
        {
          "type": "checkbox",
          "id": "show_payment_icons",
          "label": "t:labels.show_payment_icons",
          "default": true
        }
      ]
    }
  ],
  "settings": [],
  "default": {
    "blocks": [
      {
        "type": "link_list"
      },
      {
        "type": "text"
      }
    ]
  }
}
{% endschema %}
